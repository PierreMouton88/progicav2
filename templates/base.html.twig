<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link class="rounded-pill" rel="icon" href="../images/our_images/icone.png">
		{# <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>"> #}
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}

			{% block stylesheets %}
		{{ encore_entry_link_tags('app') }}
		{% endblock %}

			{% block javascripts %}
		{{ encore_entry_script_tags('app') }}
	{% endblock %}
	</head>
		<body>
		{% include "_partials/_header.html.twig" %}
			<main class=""> {% for message in app.session.flashBag.get('info') %}
				<div class="w-50 alert alert-info" role="alert">
					{{ message }}
				</div>
			{% endfor %}
			{% for message in app.session.flashBag.get('error') %}
				<div class="w-50 alert alert-danger" role="alert">
					{{ message }}
				</div>
			{% endfor %}
			{% for message in app.session.flashBag.get('success') %}
				<div class="mx-auto w-50 alert alert-success" role="alert">
					{{ message }}
				</div>
			{% endfor %}
			{% block body %}{% endblock %}
		</main>
		{% include "_partials/_footer.html.twig" %}
	</body>
</html>
