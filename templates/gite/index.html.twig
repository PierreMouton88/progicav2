{% extends 'base.html.twig' %}

{% block title %}Nos Gîtes
{% endblock %}

{% block body %}
	<div class="container-fluid bg-image" style="background-image: url('{{ asset('/images/our_images/Spanish_holiday_home.jpg') }} '); background-size: cover;
																																																																																																																																																																																																																																																																																																																																	background-repeat: no-repeat; height:60vh">
		<div class="row p-3 ">


			{{ form_start (formSearch)}}

			{{ form_end (formSearch)}}


		</div>


	</div>


	<section id="selection" class="container-fluid ">
		<h1 class="">Nos gîtes</h1>
		<div class="row">

			<h2 class="text-center m-3">Les nouveautés :</h2>

			<ul class="d-flex justify-content-center ">

				{% for gite in gites[-5:5] %}
					<li id="index-pu-ul" style="min-height: 25rem" class="card  list-group-item col-2 mx-2 rounded ">
						<picture>
							<img src="../images/gites/{{ gite.imageName }}" class="img-fluid rounded-top " alt="{{ gite.name }}">
						</picture>
						<div class="card-body">
							<div>
								<h4 class="text-center">{{ gite.name }}</h4>
							</div>
							<div>
								<p class="text-center">{{ gite.city }}</p>
							</div>
						</div>
						<div class="text-center p-2">
							<a class="mb-3 position-absolute bottom-0 start-50 translate-middle-x btn btn-outline-info" href="{{ path('app_gite_show', {'id': gite.id}) }}">Voir</a>
						</div>
					</li>
				{% else %}
					<li>
						<div class="alert alert-info">no records found</div>
					</li>
				{% endfor %}

			</ul>
		</div>
		<div class="text-center p-2">
			<a class="btn btn-outline-info" href="#all">Tous nos gîtes</a>
		</div>

	</section>
	<section id="all" class="container-fluid bg-secondary">
		<div class="row justify-content-center">

			{% for gite in gites %}
				{# <div class="row"> #}
				<div class=" col-2 m-2 rounded">
					<div class="card" style="min-height: 18rem" width="18rem">
						<picture>
							<img src="../images/gites/{{ gite.imageName }}" class="img-fluid card-image-top" alt="{{ gite.name }}">
						</picture>
						<div class="card-body">
							<div>
								<h4 class="text-center">{{ gite.name }}</h4>
							</div>
							<div>
								<p class="text-center">{{ gite.city }}</p>
							</div>

						</div>
						<div class="text-center p-2">
							<a class="mb-3 position-absolute bottom-0 start-50 translate-middle-x btn btn-outline-info" href="{{ path('app_gite_show', {'id': gite.id}) }}">Voir</a>
						</div>
					</div>
				</div>

			{% else %}
				<li>
					<div class="alert alert-info">no records found</div>
				</li>
			{% endfor %}

		</div>
	</div>
