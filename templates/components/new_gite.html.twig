<div{{attributes}}>

	{{ form_start(form) }}
	<section class="container">
		<div class="my-custom-class-for-errors">
			{{ form_errors(form) }}
		</div>

		<div class="row">
			<div class="col">
				{{ form_row(form.name, {'label': 'Renseignez votre titre d\'annonce'}) }}
		<small class="mb-3">N'oubliez pas de renseigner un titre attractif</small>
	</div>
</div>

<div class="row">
	<div class="col">		
		{{ form_row(form.description, {'label': 'Description'}) }}
			</div>
		</div>

		<div class="row">
			<div class="col">
				{{ form_row(form.address, {'label': 'Adresse'}) }}
			</div>
		</div>

		<div class="row">
			<div class="col-4">
				{{ form_row(form.zipcode, {'label': 'Code Postal'}) }}
			</div>
			<div class="col-8">
				{{ form_row(form.city, {'label': 'Ville'}) }}
			</div>
		</div>

		<div class="row">
			<div class="col">
				{{ form_row(form.departement, {'label': 'Departement'}) }}
			</div>
			<div class="col">
				{{ form_row(form.region, {'label': 'Région'}) }}
			</div>
		</div>

		<div class="row">
			<div class="col">
				{{ form_row(form.surface, {'label': 'Surface Totale'}) }}
			</div>
			<div class="col">
				{{ form_row(form.rooms, {'label': 'Nombre de chambres'}) }}
			</div>
			<div class="col">
				{{ form_row(form.beds, {'label': 'Nombre de lits'}) }}
			</div>
		</div>

		<div class="row">
			<div class="col">
				{{ form_row(form.animalAllowed, {'label': 'Autorisez-vous les animaux ?'}) }}
			</div>
			<div class="col">
				{{ form_row(form.animalFee, {'label': 'Si oui, veuillez renseigner le supplément.'}) }}
			</div>
		</div>

		<div class="row">
			<div class="col">
				{{ form_row(form.greenPrice, {'label': 'Prix hebdomadaire'}) }}
			</div>
			<div class="col">
				{{ form_row(form.redPrice, {'label': 'Prix hebdomadaire haute saison'}) }}
			</div>
		</div>

		<div class="row">
			<div class="col">
				{{ form_row(form.startRed, {'label': 'Début saison haute'}) }}
			</div>
			<div class="col">
				{{ form_row(form.endRed, {'label': 'Fin saison haute'}) }}
			</div>
		</div>
		<div class="row">
			<div class="col card">
				<div class="card-body p-3">
					<h3 class="card-title">
						Services
					</h3>

					{% for key, giteServicesForm in form.giteServices %}
						<div class="d-flex">
							<button class="btn" data-action="live#action" data-action-name="removegiteServices(index={{ key }})" type="button">
								<i class="fa-solid fa-trash lime"></i>
							</button>

							{{ form_widget(giteServicesForm) }}
						</div>
					{% endfor %}

					{% do form.giteServices.setRendered %}

					<button class="btn btn-outline-info" data-action="live#action" data-action-name="addGiteServices" type="button">
						Ajouter un service</button>
				</div>
			</div>
			<div class="col">
				{% if gite %}
					{% for eqp in gite.eqps %}
						<div>
							<span class="btn ms-2">
								<button class="btn" type="button">
									<i class="fa-solid fa-trash lime"></i>
								</button>
							</span>
							{{ eqp.name }}
							({{ eqp.type }})
						</div>
					{% endfor %}
				{% endif %}

			</div>
			<div class="col">
				{{ form_row(form.eqpExt, {'label': 'Equipements extérieurs'}) }}
			</div>
			<div class="col">
				{{ form_row(form.eqpInt, {'label': 'Equipements intérieurs'}) }}
			</div>

		</div>
		<div class="row">
			<div class="col">{{ form_widget(form.imageFile, {'label': 'Photo de votre bien'}) }}
			</div>
			<div class="col">
				{% if gite %}

					<span class="btn ms-2">
						<button class="btn" type="button">
							<i class="fa-solid fa-trash lime"></i>
						</button>
					</span>
					{# {{ form_widget(form.imageFile) }} #}
					<img class="rounded-4" width="20%" src="{{ vich_uploader_asset(gite, 'imageFile') }}" alt="{{ gite.imageName }}">
				{% endif %}

			</div>
		</div>

		<button class="btn btn-light">{{ button_label|default('Sauvegarder') }}</button>
		{{ form_end(form) }}</div>
</div></section>
