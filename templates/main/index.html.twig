{% extends 'base.html.twig' %}

{% block title %}Easy-Gite
{% endblock %}

{% block body %}
	<section class="row">
		<h1 class="text-center lime my-5">Bienvenue chez Progica</h1>
	</section>
	<section class="row">
		<div id="mainCarousel" class="carousel slide carousel-fade">
			<div class="carousel-inner">
				<div class="carousel-item active">
					<img src={{ asset('images/our_images/first_slide.jpg') }} class="d-block w-100" alt="...">
				</div>
				<div class="carousel-item">
					<img src={{ asset('images/our_images/second_slide.jpg') }} class="d-block w-100" alt="...">
				</div>
				<div class="carousel-item">
					<img src={{ asset('images/our_images/third_slide.jpg') }} class="d-block w-100" alt="...">
				</div>
			</div>
			<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Previous</span>
			</button>
			<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Next</span>
			</button>
		</div>
	</section>
	<section class="row">
		<div class="col"></div>
		<div class="col"></div>
	</section>

{% endblock %}
